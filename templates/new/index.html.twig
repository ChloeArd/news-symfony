{% extends 'base.html.twig' %}

{% block title %}Les News !{% endblock %}

{% block body %}
    <div class="container py-5">

        <h1 class="m-5">Les News !</h1>

        {% for new in news  %}
            {% for info in new  %}

            <div class="card mb-3">

                {% if info.image is defined and info.image is not null %}
                    <img src="{{ info.image }}" class="card-img-top" alt="{{ info.title }}">
                {% elseif info.urlToImage is defined and info.urlToImage is not null %}
                    <img src="{{ info.urlToImage }}" class="card-img-top" alt="{{ info.title }}">
                {% elseif info.image_url is defined and info.image_url is not null %}
                    <img src="{{ info.image_url }}" class="card-img-top" alt="{{ info.title }}">
                {% else %}
                    <img src="https://via.placeholder.com/700x100" class="card-img-top" alt="{{ info.title }}">
                {% endif %}

                <div class="card-body">
                    <h5 class="card-title">{{ info.title }}</h5>
                    <p class="card-text">{{ info.description }}</p>

                    {% if info.published_at is defined %}
                        <p class="card-text"><small class="text-muted">{{ info.published_at }}</small></p>
                    {% elseif info.publishedAt is defined %}
                        <p class="card-text"><small class="text-muted">{{ info.publishedAt }}</small></p>
                    {% elseif info.pubDate is defined %}
                        <p class="card-text"><small class="text-muted">{{ info.pubDate }}</small></p>
                    {% endif %}

                </div>
            </div>
        {% endfor %}
        {% endfor %}

    </div>
{% endblock %}
