{% extends 'base.html.twig' %}

{% block title %}Un article{% endblock %}

{% block body %}

    <div class="container p-5">
        <h1 class="m-3">{{ oneNew.title }}</h1>

        {% if oneNew.image is defined and oneNew.image is not null %}
            <img src="{{ oneNew.image }}" class="card-img-top m-5" alt="{{ oneNew.title }}">
        {% elseif oneNew.urlToImage is defined and oneNew.urlToImage is not null %}
            <img src="{{ oneNew.urlToImage }}" class="card-img-top m-5" alt="{{ oneNew.title }}">
        {% elseif oneNew.image_url is defined and oneNew.image_url is not null %}
            <img src="{{ oneNew.image_url }}" class="card-img-top m-5" alt="{{ oneNew.title }}">
        {% else %}
            <img src="https://via.placeholder.com/700x100" class="card-img-top m-5" alt="{{ oneNew.title }}">
        {% endif %}

        {% if oneNew.published_at is defined %}
            <p class=""><small class="text-muted">{{ oneNew.published_at }}</small></p>
        {% elseif oneNew.publishedAt is defined %}
            <p class=""><small class="text-muted">{{ oneNew.publishedAt }}</small></p>
        {% elseif oneNew.pubDate is defined %}
            <p class=""><small class="text-muted">{{ oneNew.pubDate }}</small></p>
        {% endif %}

        <p>{{ oneNew.description }}</p>

    </div>

{% endblock %}


