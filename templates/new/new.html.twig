{% extends 'base.html.twig' %}

{% block title %}{{ oneNew.title }}{% endblock %}

{% block body %}

    <div class="container p-5">
        <div>
            <h1 class="my-3">{{ oneNew.title }}</h1>

            <div class="flexCenter">
                {% if oneNew.image is defined and oneNew.image is not null %}
                    <img src="{{ oneNew.image }}" class="image2 my-5" alt="{{ oneNew.title }}">
                {% elseif oneNew.urlToImage is defined and oneNew.urlToImage is not null %}
                    <img src="{{ oneNew.urlToImage }}" class="image2 my-5" alt="{{ oneNew.title }}">
                {% elseif oneNew.image_url is defined and oneNew.image_url is not null %}
                    <img src="{{ oneNew.image_url }}" class="image2 my-5" alt="{{ oneNew.title }}">
                {% else %}
                    <img src="https://via.placeholder.com/400x400" class="image m-5" alt="{{ oneNew.title }}">
                {% endif %}

            </div>

            {% if oneNew.published_at is defined %}
                <p class="textR"><small class="text-muted">{{ oneNew.published_at }}</small></p>
            {% elseif oneNew.publishedAt is defined %}
                <p class="textR"><small class="text-muted">{{ oneNew.publishedAt }}</small></p>
            {% elseif oneNew.pubDate is defined %}
                <p class="textR"><small class="text-muted">{{ oneNew.pubDate }}</small></p>
            {% endif %}


            {% if oneNew.full_description is defined %}
                <p class="para">{{ oneNew.full_description }}.</p>
            {% else %}
                <p class="para">{{ oneNew.description }}.</p>
            {% endif %}

        </div>
    </div>

{% endblock %}


